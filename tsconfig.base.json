{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["src"]
}
